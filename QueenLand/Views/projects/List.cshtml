@{
    
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}
<div class="row">
    <div class="col-sm-9" style="padding-top:5px;margin-left:12px;border:1px solid #ff0000;">
        @Html.Raw(@ViewBag.products)
        <a href="=btn">
    </div>
