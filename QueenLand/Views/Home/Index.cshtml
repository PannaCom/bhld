  <div class="row"> 
      <div class="col-sm-9" style="padding-top:5px;">
          @Html.Raw(@ViewBag.products)
      </div>
      <div class="col-sm-3" style="border:1px solid #808080;">
              <h3>Tin tức</h3>
              @foreach (var item in ViewBag.news)
              {
                var link = QueenLand.Config.domain + "tin/" + QueenLand.Config.unicodeToNoMark(@item.title) + "-" + @item.id;
                <div style="margin-bottom:25px;display:block;position:relative;float:left;">
                    <a href="@link" class="col-sm-12" style="display:block;position:relative;float:left;"><img src="@QueenLand.Config.domain/@item.image" alt="@item.title" class="imagenewslist" style="border:1px solid #808080;width:100%;height:250px;"></a>
                    <div class="col-sm-12">
                        
                            <b style="font-size:12px;margin-top:0px;"><a href="@link">@Html.Raw(@item.title)</a></b>
                            <p class="intro">@Html.Raw(@item.des)</p>
                       
                    </div>
                </div>
              }
